<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity" >

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_general_day"
        android:visibility="visible" />

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/intro_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0576069"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:text="@string/block_up_down_intro"
        android:textColor="@color/yellow"
        android:textSize="25sp"
        android:visibility="visible" />

    <include
        android:id="@+id/resultLayer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/result_layer"
        android:visibility="invisible" />

    <LinearLayout 
        android:id="@+id/ads_container_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >
	    <FrameLayout
	        android:id="@+id/ads_widget_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:visibility="gone"
	        />
        
    </LinearLayout>

</FrameLayout>