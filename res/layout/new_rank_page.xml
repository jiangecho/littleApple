<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dip"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progressBar"
	    android:layout_marginTop="5dip"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:visibility="gone"
        />
    
    <TextView 
        android:id="@+id/networkInfoTV"
	    android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/network_error"
        android:gravity="center"
        android:visibility="gone"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/me"
		        android:textColor="@color/red"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
			<View 
			    android:layout_height="1dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="5dip"
			    android:background="?android:attr/listDivider"
			    />
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dip"
			    android:orientation="horizontal">
			    <TextView
			        android:id="@+id/my_rank_of_last_week"
			        android:paddingLeft="10dip"
			        android:layout_marginTop="5dip"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="2"
			        android:gravity="center_vertical"
			        android:text="@string/my_rank_of_last_week"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			    
			    <Button 
			        android:id="@+id/accept_award"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:text="@string/accept_award"
			        android:textColor="@color/red"
			        />
			    
			</LinearLayout>
		
		
		    <TextView
		        android:id="@+id/my_rank_of_current_week"
		        android:paddingLeft="10dip"
		        android:layout_marginTop="5dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/my_rank_of_current_week"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		
			<View 
			    android:layout_height="2dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="10dip"
			    android:background="?android:attr/listDivider"
			    />
		
		    <TextView
		        android:layout_marginTop="20dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/award_of_last_week"
		        android:textColor="@color/red"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		
			<View 
			    android:layout_height="1dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="10dip"
			    android:background="?android:attr/listDivider"
			    />
		
			<LinearLayout 
			    android:layout_marginTop="5dip"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			
			    <TextView
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/nicky_name"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
			    <TextView
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/score"
			        android:textAppearance="?android:attr/textAppearanceMedium" />

			    <TextView
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/award"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
			
			<View 
			    android:layout_height="1dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="5dip"
			    android:background="?android:attr/listDivider"
			    />
		
		
		    <com.echo.littleapple.ListViewEX
		        android:id="@+id/last_week_award_list"
			    android:layout_marginTop="5dip"
			    android:minHeight="250dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        />
		    
		    <TextView 
		        android:id="@+id/last_week_no_award_list" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:text="@string/last_week_no_competition"
		        android:alpha="0.6"
		        android:visibility="gone"
		        />
		
			<View 
			    android:layout_height="2dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="10dip"
			    android:background="?android:attr/listDivider"
			    />
		    <TextView
		        android:layout_marginTop="20dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/rank_of_current_week"
		        android:textColor="@color/red"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		
			<View 
			    android:layout_height="1dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="10dip"
			    android:background="?android:attr/listDivider"
			    />
		
			<LinearLayout 
			    android:layout_marginTop="5dip"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			
			    <TextView
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/rank"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
			    <TextView
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/nicky_name"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
			    <TextView
			        android:layout_width="0dip"
			        android:layout_weight="1"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:text="@string/score"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
			
			<View 
			    android:layout_height="1dip"
			    android:layout_width="match_parent"
			    android:layout_marginTop="5dip"
			    android:background="?android:attr/listDivider"
			    />
		
		
		    <com.echo.littleapple.ListViewEX
		        android:id="@+id/current_week_rank_list"
			    android:layout_marginTop="5dip"
			    android:minHeight="250dip"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        />

		    <TextView 
		        android:id="@+id/current_week_no_rank_list" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:text="@string/last_week_no_competition"
		        android:alpha="0.6"
		        android:visibility="gone"
		        />
            
        </LinearLayout>
    </ScrollView>


</LinearLayout>
